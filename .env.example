# Copy this to .env and configure your settings

# ===========================
# LLM Configuration
# ===========================
LLM_ENABLED=true
LLM_PROVIDER=openai  # Options: openai, anthropic, local
LLM_MODEL=gpt-4-turbo-preview
LLM_API_KEY=your_api_key_here
LLM_BASE_URL=  # For local models (e.g., http://localhost:8080)
LLM_MAX_TOKENS=500
LLM_TEMPERATURE=0.8

# Alternative LLM Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================
# Network Configuration
# ===========================
MASTER_SERVER_HOST=localhost
MASTER_SERVER_PORT=8888
MASTER_SERVER_URL=http://localhost:8888

# P2P Configuration
P2P_PORT=9000
P2P_MAX_CONNECTIONS=10
P2P_ENCRYPTION=true

# ===========================
# Database Configuration
# ===========================
DATABASE_TYPE=sqlite  # Options: sqlite, postgresql
DATABASE_PATH=./shards_of_eternity.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/shards_db

# ===========================
# Game Configuration
# ===========================
MAX_PLAYERS_PER_AREA=20
AUTOSAVE_INTERVAL=300  # seconds
WORLD_RESET_THRESHOLD=12  # number of shards needed
DEBUG_MODE=false

# ===========================
# Security & Admin
# ===========================
ADMIN_TOKEN=your_secure_admin_token_here
ENCRYPTION_KEY=  # Will be auto-generated if empty
SESSION_SECRET=your_session_secret_here

# ===========================
# Logging
# ===========================
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
LOG_FILE=./logs/shards.log
